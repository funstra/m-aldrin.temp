---
layout: layouts/base
titel: writings
onepage: true
tags: nav
---

<svg
  width="100%"
  height="100%"
  viewBox="0 0 1000 866"
  preservAspectRatio="xMidYMid"
>
  <defs>
    <radialGradient
      id="shade"
      gradientTransform="translate(-0.3 -0.3) scale(1.2)"
    >
      <stop
        offset="10%"
        stop-color="hsl(var(--col-r) var(--col-weight-500) / 0.35)"
/>
      <stop
        offset="100%"
        stop-color="hsl(var(--col-r) var(--col-weight-300) / 0.9)"
/>
    </radialGradient>
  </defs>
  <style>
    polygon {
      vector-effect: non-scaling-stroke;
    }
    .shadow {
      filter: drop-shadow(0 0 0.5em hsl(var(--col-r) var(--col-weight-300))) brightness(1) blur(0.125em);
    }
    .pulse {
      animation-name: pulse;
      animation-duration: 15s;
      animation-iteration-count: infinite;
      animation-direction: alternate;
      fill: url("#shade");
    }
    @keyframes pulse {
      from {
        filter: blur(0.35em);
        transform: scale(1);
        stroke: hsl(var(--white) / 0.25);
      }
      to {
        filter: blur(0.1em);
        transform: scale(2);
        stroke: hsl(var(--white) / 0.5);
      }
    }
  </style>
  <g
    transform=""
    fill="transparent"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    {% set r = 100 %}
    <a href="/about/">
      <circle
        class="shadow pulse"
        stroke="hsl(var(--white) / 0.25)"
        stroke-width="12"
        fill="hsl( var(--col-r) var(--col-weight-300) / 0.25  )"
        cx="500"
        cy="50%"
        r="{{ r }}"
        transform-origin="500 {{ h }}"/>
    </a>

  </g>
</svg>