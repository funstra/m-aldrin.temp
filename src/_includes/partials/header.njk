<header id="site-header">
    <div class="logo">
        <a href="/" 
          {% if page.url == '/' %}
            aria-current="page"
          {% endif %}>FUNSTRA</a>
    </div>
    <div id="site-nav">
        <button onclick="document.documentElement.dataset.navState = 'open' ">
            <span>menu</span>
            <svg width="100%" height="2ex"viewBox="0 0 12 20" preserveAspectRatio="xMidYMid">
                <g fill="currentColor">
                    <circle cx="6" cy="4" r="2"/>
                    <circle cx="6" cy="10" r="2"/>
                    <circle cx="6" cy="16" r="2"/>
                </g>
            </svg>
        </button>
        <nav>
            <div id="color-select">
                <input type="range" min="0" max="360" value="180" oninput="setColor(event)"/>
            </div>
            <header>
                <button onclick="document.documentElement.dataset.navState = ''">
                    <span>close</span>
                </button>
                <h3>Site Navigation</h3>
            </header>
            <ul>
                {% for navpage in nav %}
                    <a href="{{navpage.url}}" 
                {% if page.url == navpage.url %}
                aria-current="page"
                {% endif %}
                >{{navpage.titel}}</a>
                {% endfor %}
            </ul>
        </nav>
    </div>
</header>